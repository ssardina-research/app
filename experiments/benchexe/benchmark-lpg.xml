<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 2.3//EN" "https://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">
<!-- Example file for benchmark definition for BenchExec. -->
<benchmark tool="benchexe.tools.lpg"
  displayName="Agent planning programs PP-LPG solver"
  timelimit="1800s"
  hardtimelimit="1805s"
  memlimit="2048 MB">

  <!-- <rundefinition> defines a tool configuration to benchmark (can appear multiple times). -->
  <rundefinition name="lpg">
    <!-- command-line options to send to the solver -->
    <!-- Save run output here -->
    <option name="--output_prefix">benchexec_output/lpg/</option>
  </rundefinition>

  <!-- <rundefinition> defines a tool configuration to benchmark (can appear multiple times). -->
  <rundefinition name="lpg_small">
    <!-- command-line options to send to the solver -->
    <!-- Use the small instance solver -->
    <option name="--solver">pp-lpg-small</option>
    <!-- Save run output here -->
    <option name="--output_prefix">benchexec_output/lpg-small/</option>
  </rundefinition>


  <!-- <tasks> defines a set of tasks (can appear multiple times). -->
  <tasks name="AIJ">
    <include>tasks/AIJ*.yml</include>
  </tasks>
  <tasks name="IJCAI">
    <include>tasks/IJCAI*.yml</include>
  </tasks>
  <tasks name="SOCS">
    <include>tasks/SOCS*.yml</include>
  </tasks>
  <!-- <tasks name="BlocksWorld">
    <include>tasks/AIJ_BlocksWorld*.yml</include>
  </tasks> -->

  <columns>
    <!-- define columns in the result tables with data from the tool output. -->
    <column title="policy_size">PolicySize</column>
    <column title="solve_time">SolveTime</column>
    <column title="translation_time">TranslationTime</column>
  </columns>

  <!-- State which files to retrive the files produced by the run  -->
  <resultfiles></resultfiles>


</benchmark>